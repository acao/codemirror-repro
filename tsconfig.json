{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "alwaysStrict": false,
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "paths": {
            "@components/*": ["components/*"],
            "@models/*": ["models/*"]
        },
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "incremental": true
    },
    "exclude": ["node_modules", "pages", "./cypress.config.ts", "cypress"],
    "include": ["**/*.ts", "**/*.tsx"]
}
